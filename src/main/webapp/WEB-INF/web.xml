<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1"
 xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
 <!-- Nome da Aplicação -->
 <display-name>Nutricao</display-name>
 
 <!-- Localização do faces config -->
 <context-param>
  <param-name>javax.faces.CONFIG_FILES</param-name>
  <param-value>/WEB-INF/faces-config.xml</param-value>
 </context-param>
 
 <!-- Estágio do Projeto -->
 <context-param>
  <param-name>javax.faces.PROJECT_STAGE</param-name>
  <param-value>Development</param-value>
 </context-param>
 <context-param>
  <param-name>primefaces.THEME</param-name>
  <param-value>hot-sneaks</param-value>
 </context-param>
 <!-- Carregamento o Hibernate -->
 <listener>
  <listener-class>com.hol.nutricao.uitl.HibernateContexto</listener-class>
 </listener>
 <!-- Configuração do JSF -->
 <servlet>
  <servlet-name>Faces Servlet</servlet-name>
  <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <!-- Informando que tipo de arquivo o JSF deve gerenciar -->
 <servlet-mapping>
  <servlet-name>Faces Servlet</servlet-name>
  <url-pattern>*.xhtml</url-pattern>
 </servlet-mapping>
 <!-- Pagina principal -->
 <welcome-file-list>
  <welcome-file>pages/index.xhtml</welcome-file>
 </welcome-file-list>
</web-app>
